{% extends 'base.html.twig' %}

{% block title %}Mes Notifications{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4 text-center">Mes Notifications</h1>

        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <strong>Notifications personnelles</strong>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-striped">
                    <thead class="table-light">
                    <tr>
                        <th>Date</th>
                        <th>Message</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for m in app.user.messages %}
                        <tr>
                            <td>{{ m.createdAt | date('d-m-Y H:i:s') }}</td>
                            <td class="{% if m.isFlagged %}fw-bold{% endif %}">{{ m.message }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <div class="d-flex justify-content-end">
                    <button class="btn btn-warning me-2">Marquer comme lu</button>
                    <button class="btn btn-danger">Effacer toutes</button>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header bg-success text-white">
                <strong>Notifications publiques de rôles</strong>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-striped">
                    <thead class="table-light">
                    <tr>
                        <th>Date</th>
                        <th>Message</th>
                        <th>Rôle</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for m in messages %}
                        <tr>
                            <td>{{ m.createdAt | date('d-m-Y H:i:s') }}</td>
                            <td class="{% if m.isFlagged %}fw-bold{% endif %}">{{ m.message }}</td>
                            <td>{{ m.roles }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
