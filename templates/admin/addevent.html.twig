{% extends 'base.html.twig' %}

{% block title %}Ajouter un évènement{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4 text-center">Ajouter un évènement</h1>

        <div class="card shadow">
            <div class="card-body">
                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                <div class="mb-3">
                    {{ form_label(form.organizer, 'Organisateur') }}
                    {{ form_widget(form.organizer, { 'attr': {'class': 'form-control'} }) }}
