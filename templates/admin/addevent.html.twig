                <div class="mb-3">
                    {{ form_label(form.img, 'Image') }}
                    {% if form.img.vars.errors|length > 0 %}
                        <div class="text-danger">
                            {% for error in form.img.vars.errors %}
                                <p>{{ error.message }}</p>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
                <div class="mb-3">
                    {{ form_label(form.categories) }}
