{% extends 'base.html.twig' %}

{% block title %}Password Reset Email Sent{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow-sm border-0 mt-5">
                    <div class="card-body p-4">
                        <div class="text-center mb-4">
                            <h2 class="h3 font-weight-bold text-primary">
                                <i class="fas fa-paper-plane mr-2"></i>Email envoyé
                            </h2>
                            <p class="text-muted">Réinitialisation de mot de passe</p>
                        </div>

                        <div class="alert alert-info" role="alert">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-info-circle mr-3 fa-2x"></i>
                                <div>
                                    <p class="mb-1">
                                        Un email de réinitialisation de mot de passe a été envoyé à votre adresse email.
                                    </p>
                                    <small class="text-muted">
                                        Le lien expirera dans
                                        {{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle') }}
                                    </small>
                                </div>
                            </div>
                        </div>

                        <div class="card border-light mb-3">
                            <div class="card-body text-secondary">
                                <h5 class="card-title">
                                    <i class="fas fa-envelope-open-text mr-2"></i>Vous n'avez pas reçu l'email ?
                                </h5>
                                <p class="card-text">
                                    Vérifiez votre dossier spam ou
                                    <a href="{{ path('app_forgot_password_request') }}" class="text-primary font-weight-bold">
                                        réessayez la réinitialisation
                                    </a>
                                </p>
                            </div>
                        </div>

                        <div class="text-center mt-4">
                            <a href="{{ path('app_login') }}" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left mr-2"></i>Retour à la connexion
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
