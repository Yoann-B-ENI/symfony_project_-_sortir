{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="container min-vh-100 d-flex align-items-center justify-content-center py-5">
    <div class="bg-navy text-navy-light p-4 registration-form" style="max-width: 800px; width: 100%;">
        <h2 class="mb-4 text-center">Inscription</h2>
        <h6 class="mb-4 text-center">Les champs marqués avec un * sont obligatoires </h6>
        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}


        {{ form_start(registrationForm, {'attr': {'novalidate': 'novalidate', 'class': 'row g-3'}}) }}
        <div class="col-12 mb-3">
            {{ form_label(registrationForm.campus, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(registrationForm.campus, {'attr': {'class': 'form-select'}}) }}
            {{ form_errors(registrationForm.campus) }}
        </div>
        <div class="col-md-6 mb-3">
            {{ form_label(registrationForm.firstname, 'Prénom *', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(registrationForm.firstname, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(registrationForm.firstname) }}
        </div>
        <div class="col-md-6 mb-3">
            {{ form_label(registrationForm.lastname, 'Nom *', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(registrationForm.lastname, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(registrationForm.lastname) }}
        </div>
        <div class="col-md-6 mb-3">
            {{ form_label(registrationForm.username, 'Pseudo *', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(registrationForm.username, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(registrationForm.username) }}
        </div>
        <div class="col-md-6 mb-3">
            {{ form_label(registrationForm.email, 'Email *', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(registrationForm.email) }}
        </div>
        <div class="col-md-6 mb-3">
            {{ form_label(registrationForm.plainPassword.first, 'Mot de passe *', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(registrationForm.plainPassword.first) }}
        </div>
        <div class="col-md-6 mb-3">
            {{ form_label(registrationForm.plainPassword.second, 'Répétez votre de passe *', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(registrationForm.plainPassword.second) }}
        </div>
        <div class="col-md-6 mb-3">
            {{ form_label(registrationForm.telephone, 'Téléphone *', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(registrationForm.telephone, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(registrationForm.telephone) }}
        </div>
        <div class="col-md-12 mb-3">
            {{ form_label(registrationForm.img, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(registrationForm.img, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(registrationForm.img) }}
            <button type="submit" class="btn btn-outline-dark">Télécharger</button>
        </div>
        <div class="col-12 mb-3">
            <div class="form-check">
                {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                {{ form_label(registrationForm.agreeTerms, 'J\'accepte les conditions d\'utilisation *', {'label_attr': {'class': 'form-check-label'}}) }}
            </div>
            {{ form_errors(registrationForm.agreeTerms) }}
        </div>




        <button type="submit" class="btn btn-outline-dark">Register</button>
        {{ form_end(registrationForm) }}
    </div>
</div>
        {% endblock %}

